@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Classes.SalesMovements>
@{
    ViewBag.Title = "DepartmentEmployeeSales";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Departman Personel Satışları</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Personel Adı: @ViewBag.departmentEmployee</li>
</ol>
<table class="table table-condensed">
    <tr>
        <th>Ürün</th>
        <th>Cari</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>Toplam</th>
        <th>Tarih</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Products.ProductName</td>
            <td>@item.Currents.CurrentName @item.Currents.CurrentSurname</td>
            <td>@item.Price ₺</td>
            <td>@item.Count</td>
            <td>@item.TotalPrice</td>
            <td>@item.Date</td>
            <td><a href="" class="btn btn-info">Yazdır</a></td>
        </tr>
    }

</table>
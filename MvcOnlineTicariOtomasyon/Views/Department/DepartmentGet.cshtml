@model MvcOnlineTicariOtomasyon.Models.Classes.Department
@{
    ViewBag.Title = "DepartmentGet";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Departman Güncelleme</h2>
<br />

@using (Html.BeginForm("DepartmentUpdate", "Department", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.DepartmentID)
        @Html.LabelFor(x => x.DepartmentName, "Department Adı")
        @Html.TextBoxFor(x => x.DepartmentName, new { @class = "form-control" })
    </div>
    <br />
    <button class="btn btn-warning">Güncelle</button>
}
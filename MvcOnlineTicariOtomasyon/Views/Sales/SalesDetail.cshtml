@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Classes.SalesMovements>
@{
    ViewBag.Title = "SalesDetail";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Satış Detayı</h2>
<br />
<table class="table table-condensed">
    <tr>
        <th>Satış Id</th>
        <th>Ürün</th>
        <th>Cari</th>
        <th>Personel</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>Toplam</th>
        <th>Tarih</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SalesID</td>
            <td>@item.Products.ProductName</td>
            <td>@item.Currents.CurrentName @item.Currents.CurrentSurname</td>
            <td>@item.Employees.EmployeeName @item.Employees.EmployeeSurname</td>
            <td>@item.Price</td>
            <td>@item.Count</td>
            <td>@item.TotalPrice</td>
            <td>@item.Date</td>

        </tr>
    }

</table>
<button class="btn btn-primary">Yazdır</button>
@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Classes.Employees>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>Personel ID</th>
        <th>Personel Adı</th>
        <th>Personel SoyAdı</th>
        <th>Personel Görsel</th>
        <th>Departman</th>
        <th>Güncelle</th>
        <th>Satışlar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.EmployeeID</td>
            <td>@item.EmployeeName</td>
            <td>@item.EmployeeSurname</td>
            <td>
                <img src="@item.EmployeeImage"  style="width:100px; height:50px;">
            </td>
            <td>@item.Department.DepartmentName</td>

            <td><a href="/Employee/EmployeeGet/@item.EmployeeID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Department/DepartmentEmployeeSales/@item.EmployeeID" class="btn btn-danger">Detaylar</a></td>

        </tr>
    }
</table>
<a href="/Employee/EmployeeAdd" class="btn btn-primary"> Personel Ekle </a>


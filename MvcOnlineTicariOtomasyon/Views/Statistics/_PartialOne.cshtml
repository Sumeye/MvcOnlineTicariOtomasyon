
@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Classes.SimpleGrup2>


<div class="card">
    <div class="card-header">
        <h3 class="card-title">Departman Personel Sayıları</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Departman</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Sayı</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int orderNo = 0;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@{orderNo++;} @orderNo</td>
                        <td>@item.Department</td>
                        <td>
                            @if (item.Count == 1)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                                </div>
                            }
                            else if (item.Count == 2)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 55%"></div>
                                </div>
                            }
                            else if (item.Count == 3)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-success" style="width: 55%"></div>
                                </div>
                            }
                        </td>
                        <td>
                            @if (item.Count == 1)
                            {
                                <span class="badge bg-danger">@item.Count</span>
                            }
                            else if (item.Count == 2)
                            {
                                <span class="badge bg-warning">@item.Count</span>
                            }
                            else if (item.Count == 3)
                            {
                                <span class="badge bg-success">@item.Count</span>
                            }
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
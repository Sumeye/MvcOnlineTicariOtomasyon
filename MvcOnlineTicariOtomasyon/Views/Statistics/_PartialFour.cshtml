@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Classes.SimpleGrup3>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Ürün Marka Tablosu</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Marka</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Toplam</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int orderNo = 0;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@{orderNo++;} @orderNo</td>
                        <td>@item.Branch</td>
                        <td>
                            @if (item.Count >= 1 && item.Count <= 3)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                                </div>
                            }
                            else if (item.Count >= 4 && item.Count <= 6)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 55%"></div>
                                </div>
                            }
                            else if (item.Count >= 7)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-success" style="width: 55%"></div>
                                </div>
                            }
                        </td>
                        <td>
                            @if (item.Count >= 1 && item.Count <= 3)
                            {
                                <span class="badge bg-danger">@item.Count</span>
                            }
                            else if (item.Count >= 4 && item.Count <= 6)
                            {
                                <span class="badge bg-warning">@item.Count</span>
                            }
                            else if (item.Count >= 7)
                            {
                                <span class="badge bg-success">@item.Count</span>
                            }
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>